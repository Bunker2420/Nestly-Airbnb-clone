<% layout('Layouts/Boilerplate.ejs') %>
<% title="FeedBack page" %>
<% style="/css/form.css" %>

<div class="main">
    <div class="Heading">
        <h1>Your feedback matters to us.</h1>
    </div>
    <form action="/listings/feedback" method="post" class="needs-validation">
    <div class="form">
       <div class="input-rating-group">
            <fieldset class="starability-slot">
                <legend>‚≠ê Rating (1‚Äì10)</legend>
                <div class="rating-stars">
                <input type="radio" id="rate0" name="rating" value="0" checked aria-label="No rating." />
                
                <input type="radio" id="rate1" name="rating" value="1" />
                <label for="rate1" title="Terrible">1</label>

                <input type="radio" id="rate2" name="rating" value="2" />
                <label for="rate2" title="Very bad">2</label>

                <input type="radio" id="rate3" name="rating" value="3" />
                <label for="rate3" title="Bad">3</label>

                <input type="radio" id="rate4" name="rating" value="4" />
                <label for="rate4" title="Below average">4</label>

                <input type="radio" id="rate5" name="rating" value="5" />
                <label for="rate5" title="Average">5</label>

                <input type="radio" id="rate6" name="rating" value="6" />
                <label for="rate6" title="Slightly above average">6</label>

                <input type="radio" id="rate7" name="rating" value="7" />
                <label for="rate7" title="Good">7</label>

                <input type="radio" id="rate8" name="rating" value="8" />
                <label for="rate8" title="Very good">8</label>

                <input type="radio" id="rate9" name="rating" value="9" />
                <label for="rate9" title="Excellent">9</label>

                <input type="radio" id="rate10" name="rating" value="10" />
                <label for="rate10" title="Perfect">10</label>
                </div>
            </fieldset>
        </div>

        <div id="poor-rating-feedback" style="display: none; margin-top: 1rem;">
            <label for="bad-experience" style="color: #d9534f; font-weight: bold;">
                ‚ùó Can you tell us what went wrong or disappointed you?
            </label>
            <textarea id="bad-experience" name="reasonForPoorRating" rows="3" style="width: 100%; padding: 0.5rem; margin-top: 0.5rem; border-radius: 6px; border: 1px solid #ccc;"></textarea>
        </div>


        <div class="input-group">
            <textarea name="Suggestion" id="Suggestion" required placeholder=" " class="form-control"></textarea>
            <label for="Suggestion">üí¨ How can we improve your experience?</label>
        </div>

        <div class="input-group">
            <input type="text" name="Feature" id="Feature" required placeholder=" " class="form-control" />
            <label for="Feature">‚ù§Ô∏è What did you like the most?</label>
        </div>

       <div class="input-radio-group">
        <p class="radio-question">üì¢ Would you recommend us to others?</p>
        <div class="radio-options">
            <label>
            <input type="radio" name="Recommend" value="Yes" required />
            Yes
            </label>
            <label>
            <input type="radio" name="Recommend" value="No" />
            No
            </label>
        </div>
        </div>

        <button type="submit">Submit</button>
    </div>
</form>

<% script="/js/Rating.js" %>
</div>