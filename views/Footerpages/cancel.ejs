<% layout('Layouts/BoilerPlate.ejs') %>
<% title = "Cancellation" %>
<% style = "/css/cancel.css" %>

<div class="container main">
    <div class="header">
        <h2>Cancellation Policy</h2>
        <p class="subheading">Choose a cancellation option for your booking</p>
    </div>

    <div class="policy-cards">
        <div class="policy-card">
            <h3>Flexible</h3>
            <p>Free cancellation up to 24 hours before check-in.</p>
            <form action="/cancelconstruction">
                <button class="select-button">Select</button>
            </form>
        </div>
        <div class="policy-card">
            <h3>Moderate</h3>
            <p>Cancel up to 5 days before check-in for a full refund.</p>
            <form action="/cancelconstruction">
                <button class="select-button">Select</button>
            </form>
        </div>
        <div class="policy-card">
            <h3>Strict</h3>
            <p>Cancel within 48 hours for 50% refund.</p>
            <form action="/cancelconstruction">
                <button class="select-button">Select</button>
            </form>
        </div>
    </div>

    <div class="footer">
        <p>Need help? <a href="/cancelconstruction">Contact Support</a></p>
    </div>
</div>
