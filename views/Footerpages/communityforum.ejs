<% layout('Layouts/BoilerPlate.ejs') %>
<% title = "Nestly Community Forum" %>
<% style = "/css/community.css" %>

<section class="community-hero fade-in">
  <div class="community-container">
    <h1 class="hero-title">Welcome to the Nestly Community</h1>
    <p class="hero-subtitle">Connect, share stories, ask questions & find support with fellow Nestly users.</p>
    <a href="#topics" class="cta-button slide-up">Explore Topics</a>
  </div>
</section>

<section class="community-topics fade-in" id="topics">
  <div class="community-container">
    <h2 class="section-title">Popular Discussions</h2>
    <div class="topic-list">

      <div class="topic-card zoom-in">
        <h3 class="topic-title">🏠 Hosting Tips & Tricks</h3>
        <p class="topic-description">Best practices, guest interactions, and how to create unforgettable stays.</p>
        <a href="/cancelconstruction" class="topic-link">Join the discussion →</a>
      </div>

      <div class="topic-card zoom-in">
        <h3 class="topic-title">🧳 Guest Experiences</h3>
        <p class="topic-description">Share your travel experiences, find homes, and connect with other guests.</p>
        <a href="/cancelconstruction" class="topic-link">Join the discussion →</a>
      </div>

      <div class="topic-card zoom-in">
        <h3 class="topic-title">🛠 Support & Troubleshooting</h3>
        <p class="topic-description">Need help? Ask the community for technical or booking support.</p>
        <a href="/cancelconstruction" class="topic-link">Join the discussion →</a>
      </div>

      <div class="topic-card zoom-in">
        <h3 class="topic-title">🌍 Local Recommendations</h3>
        <p class="topic-description">Explore the best of each destination—hidden gems, food, and activities.</p>
        <a href="/cancelconstruction" class="topic-link">Join the discussion →</a>
      </div>

    </div>
  </div>
</section>

<section class="community-cta fade-in">
  <div class="community-container">
    <h2>Have a question or story to share?</h2>
    <p>Be part of our growing community. Your voice matters!</p>
    <a href="/cancelconstruction" class="cta-button glow-on-hover">Start a Discussion</a>
  </div>
</section>
