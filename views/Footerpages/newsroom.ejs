<% layout('Layouts/BoilerPlate.ejs') %>
<% title = "Nestly Newsroom" %>
<% style = "/css/newsroom.css" %>

<section class="newsroom-hero fade-in">
  <div class="newsroom-container">
    <h1 class="hero-title">Nestly Newsroom</h1>
    <p class="hero-subtitle">Stay updated with the latest news, announcements, and stories from Nestly.</p>
  </div>
</section>

<section class="newsroom-articles fade-in">
  <div class="newsroom-container">
    <h2 class="section-title">Latest News</h2>
    <div class="articles-grid">

      <article class="article-card zoom-in">
        <img src="https://images.unsplash.com/photo-1593642634367-d91a135587b5" alt="Nestly Launches New Feature" class="article-image">
        <div class="article-content">
          <h3 class="article-title">Nestly Launches Instant Booking Feature</h3>
          <p class="article-date">April 25, 2025</p>
          <p class="article-summary">Nestly introduces a new instant booking feature to enhance user experience and streamline reservations.</p>
          <a href="/cancelconstruction" class="read-more">Read More →</a>
        </div>
      </article>

      <article class="article-card zoom-in">
        <img src="https://images.unsplash.com/photo-1593642634367-d91a135587b5" alt="Community Outreach Program" class="article-image">
        <div class="article-content">
          <h3 class="article-title">Community Outreach Program Launched</h3>
          <p class="article-date">April 18, 2025</p>
          <p class="article-summary">Nestly partners with local organizations to support community development and housing initiatives.</p>
          <a href="/cancelconstruction" class="read-more">Read More →</a>
        </div>
      </article>

      <article class="article-card zoom-in">
        <img src="https://images.unsplash.com/photo-1593642634367-d91a135587b5" alt="Sustainability Efforts" class="article-image">
        <div class="article-content">
          <h3 class="article-title">Advancing Sustainability in Hosting</h3>
          <p class="article-date">April 10, 2025</p>
          <p class="article-summary">Nestly commits to eco-friendly practices by introducing new sustainability guidelines for hosts.</p>
          <a href="/cancelconstruction" class="read-more">Read More →</a>
        </div>
      </article>

    </div>
  </div>
</section>

<section class="newsroom-press fade-in">
  <div class="newsroom-container">
    <h2 class="section-title">Press Inquiries</h2>
    <p class="press-text">For media inquiries, please contact our press team at <a href="/cancelconstruction">press@nestly.com</a>.</p>
  </div>
</section>
